<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvgrid"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/notes"
            android:id="@+id/txtNotes"
            android:paddingLeft="4dp"
            android:textSize="15dp"
            android:textColor="@color/colorNotesItem"

            android:layout_centerVertical="true"



            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_toEndOf="@+id/relativeLayout1"
        android:layout_toStartOf="@+id/relativeLayout3"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="@string/cost"
            android:textSize="15dp"
            android:textColor="@color/actionbar_background"
            android:id="@+id/txtCost"

            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x3"
            android:textStyle="bold"
            android:textColor="@color/colorNotesItem"
            android:id="@+id/txtQty"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/txtCost"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="50dp"


        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout3">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="#fffd1423"
            android:src="@drawable/ic_window_minimize"
            android:id="@+id/img_ic_remove"


            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
