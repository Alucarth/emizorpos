<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff414141"
    tools:context="com.ipxserver.davidtorrez.fvpos.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#ff414141"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_login"
            android:paddingBottom="20dp"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:indeterminate="false"
            android:id="@+id/progressBar2" />

        <EditText
            android:id="@+id/etStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:hint="Dominio"
            android:textColorHint="#ff414141"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_action_store"
            android:inputType="text" />
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:hint="Usuario"
            android:textColorHint="#ff414141"
            android:drawableLeft="@drawable/ic_action_user"
            android:inputType="textAutoComplete" />
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="ContraseÃ±a"
            android:textColorHint="#ff414141"
            android:layout_marginBottom="5dp"
            android:password="true"
            android:drawableLeft="@drawable/ic_action_password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btnSingIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="1dp"
            android:text="INICIAR SESION"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_app"
            />
    </LinearLayout>

</RelativeLayout>
